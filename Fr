        function loadCars(filter='all'){
            const grid=document.getElementById('vehiclesGrid');
            const filtered=filter==='all'?carsData:carsData.filter(c=>c.category===filter);
            grid.innerHTML=filtered.map(car=>`
                <div class="vehicle-card">
                    <img src="${car.img}" alt="${car.name}">
                    <div class="vehicle-info">
                        <h3>${car.name}</h3>
                        <p>${car.gear} ‚Ä¢ ${car.engine} ‚Ä¢ 5 Places</p>
                        <div class="vehicle-price">
                            <span class="price">${car.price} MAD</span>
                            <span class="per-day">/jour</span>
                        </div>
                        <p style="font-size:13px;color:#666;margin:10px 0">D√©p√¥t: ${car.deposit}</p>
                        <a href="${car.link}" onclick="saveSearchData()" class="btn-primary" style="width:100%;text-align:center;display:block;text-decoration:none">R√©server</a>
                    </div>
                </div>
            `).join('');
        }

        function saveSearchData() {
            const pickup = document.getElementById('pickupDate').value;
            const returnDate = document.getElementById('returnDate').value;
            const location = document.getElementById('pickupLocation').value;
            if(pickup && returnDate) {
                localStorage.setItem('rafalcar_search', JSON.stringify({pickup, returnDate, location}));
            }
        }

        function searchCars() {
            saveSearchData();
            window.location.href = '#vehicles';
        }

        document.querySelectorAll('.tab-btn').forEach(btn=>{
            btn.addEventListener('click',function(){
                document.querySelectorAll('.tab-btn').forEach(b=>b.classList.remove('active'));
                this.classList.add('active');
                loadCars(this.dataset.filter);
            });
        });

        document.getElementById('contactForm').addEventListener('submit',async function(e){
            e.preventDefault();
            const formData=new FormData(this);
            formData.append('_subject','Contact Form FR - '+formData.get('name'));
            formData.append('_template','table');
            try{
                await fetch('https://formsubmit.co/ajax/rafal.carmed5@gmail.com',{method:'POST',body:formData});
                alert('‚úÖ Message envoy√©!');
                this.reset();
            }catch(error){
                alert('‚úÖ Message enregistr√©!');
                this.reset();
            }
        });

        const today=new Date().toISOString().split('T')[0];
        document.getElementById('pickupDate').min=today;
        document.getElementById('returnDate').min=today;

        document.getElementById('menuToggle')?.addEventListener('click',function(){
            document.getElementById('navMenu').classList.toggle('active');
        });

        loadCars();
    </script>
    
